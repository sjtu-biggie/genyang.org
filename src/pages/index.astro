<style>
  .page {
    max-width: 760px;
    margin: 0 auto;
  }
  
  .profile-header {
    display: grid;
    gap: 2rem;
    margin: 2rem 0 3rem 0;
    padding: 2rem;
    border: 1px solid var(--accent);
    border-radius: 8px;
    background: rgba(var(--accent-rgb), 0.03);
  }
  
  @media (min-width: 768px) {
    .profile-header {
      grid-template-columns: auto 1fr;
      align-items: center;
    }
  }
  
  .profile-image {
    display: flex;
    justify-content: center;
  }
  
  .profile-image img {
    width: 180px;
    height: 180px;
    border-radius: 12px;
    object-fit: cover;
    border: 3px solid var(--accent);
    box-shadow: 0 4px 12px rgba(var(--accent-rgb), 0.2);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .profile-image img:hover {
    transform: scale(1.05);
    box-shadow: 0 6px 20px rgba(var(--accent-rgb), 0.3);
  }
  
  .profile-intro {
    text-align: center;
  }
  
  @media (min-width: 768px) {
    .profile-intro {
      text-align: left;
    }
  }
  
  .profile-intro h2 {
    color: var(--accent);
    margin-top: 0;
  }
  
  .terminal-section {
    margin: 2rem 0;
    padding: 1.5rem;
    border-left: 3px solid var(--accent);
    background: rgba(238, 195, 94, 0.05);
  }
  
  .code-block {
    background: rgba(238, 195, 94, 0.1);
    padding: 1rem;
    border-radius: 4px;
    margin: 1rem 0;
    overflow-x: auto;
  }
  
  .code-block pre {
    margin: 0;
    font-family: 'Fira Code', monospace;
    font-size: 0.9rem;
    line-height: 1.4;
  }
  
  .focus-list {
    list-style: none;
    padding: 0;
  }
  
  .focus-list li {
    margin: 1rem 0;
    padding-left: 1.5rem;
    position: relative;
  }
  
  .focus-list li::before {
    content: "â–¶ ";
    color: var(--accent);
    font-weight: bold;
    position: absolute;
    left: 0;
  }
  
  blockquote {
    border-left: 4px solid var(--accent);
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--accent);
  }
  
  .contact-links ul {
    list-style: none;
    padding: 0;
  }
  
  .contact-links li {
    margin: 0.5rem 0;
    padding-left: 2rem;
  }
  
  .contact-links a {
    color: var(--accent);
    text-decoration: none;
  }
  
  .contact-links a:hover {
    text-decoration: underline;
  }
  
  .experience-list, .education-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  
  
  .experience-item {
    margin: 1rem 0;
  }
  
  .education-item {
    margin: 1rem 0;
  }
  
  .company-info, .university-info {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }
  
  .company-logo, .university-logo {
    width: 150px;
    height: 150px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }
  
  .company-logo img, .university-logo img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  
  /* Individual logo background optimization */
  .company-logo img[src*="citadel"] {
    background: white;
    padding: 8px;
  }
  
  .company-logo img[src*="bloomberg"] {
    background: transparent;
  }
  
  .company-logo img[src*="alibaba"] {
    background: white;
    padding: 8px;
  }
  
  .company-logo img[src*="metabit"] {
    background: white;
    padding: 8px;
  }
  
  .university-logo img[src*="berkeley"] {
    background: transparent;
  }
  
  .university-logo img[src*="sjtu"] {
    background: white;
    padding: 8px;
  }
  
  .company-details h3, .university-details h3 {
    margin: 0 0 0.25rem 0;
    color: var(--accent);
  }
  
  .role, .degree, .duration {
    margin: 0.25rem 0;
    font-size: 0.9rem;
    color: var(--color-secondary);
  }
  
  .role, .degree {
    font-weight: 500;
  }
  
  .description {
    margin: 0.5rem 0;
    font-size: 0.85rem;
    color: var(--foreground);
    font-style: italic;
    opacity: 0.9;
  }
</style>