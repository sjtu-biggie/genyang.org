  </div>
</BaseLayout>

<style>
  .page {
    max-width: 760px;
    margin: 0 auto;
  }
  
  .terminal-section {
    margin: 2rem 0;
    padding: 1.5rem;
    border-left: 3px solid var(--accent);
    background: rgba(238, 195, 94, 0.05);
  }
  
  .code-block {
    background: rgba(238, 195, 94, 0.1);
    padding: 1rem;
    border-radius: 4px;
    margin: 1rem 0;
    overflow-x: auto;
  }
  
  .code-block pre {
    margin: 0;
    font-family: 'Fira Code', monospace;
    font-size: 0.9rem;
    line-height: 1.4;
  }
  
  .focus-list {
    list-style: none;
    padding: 0;
  }
  
  .focus-list li {
    margin: 1rem 0;
    padding-left: 1.5rem;
    position: relative;
  }
  
  .focus-list li::before {
    content: "â–¶ ";
    color: var(--accent);
    font-weight: bold;
    position: absolute;
    left: 0;
  }
  
  blockquote {
    border-left: 4px solid var(--accent);
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--accent);
  }
  
  .contact-links ul {
    list-style: none;
    padding: 0;
  }
  
  .contact-links li {
    margin: 0.5rem 0;
    padding-left: 2rem;
  }

  .education-block, .experience-block {
    margin: 1rem 0;
  }

  .degree, .company {
    margin: 1.5rem 0;
    padding: 1rem;
    background: rgba(238, 195, 94, 0.08);
    border-radius: 6px;
    border-left: 3px solid var(--accent);
  }

  .company {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }

  .company-logo {
    width: 60px;
    height: 60px;
    object-fit: contain;
    border-radius: 4px;
    background: white;
    padding: 8px;
  }

  .company-details {
    flex: 1;
  }

  .degree h3, .company h3 {
    color: var(--accent);
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
  }

  .degree p, .company p {
    margin: 0.25rem 0;
  }

  .focus-area, .role-description {
    font-style: italic;
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.9rem;
  }
</style>